{
    "name": "codeclimate-hook",
    "version": "1.0.0",
    "description": "Publish code coverage to Code Climate",
    "main": "./lib/main.js",
    "scripts": {
        "build": "tsc",
        "test": "echo 0",
        "format": "prettier --write src/*.ts test/*.ts",
        "format:check": "prettier --check src/*.ts test/*.ts"
    },
    "bin": {
        "send-coverage": "./bin/send-coverage.js"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/lucasbadico/codeclimate-hook.git"
    },
    "keywords": [
        "codeclimate",
        "quality",
        "coverage"
    ],
    "author": "LucasBadico <lucasbadico@gmail.com>",
    "license": "MIT",
    "dependencies": {
        "node-fetch": "^2.6.0"
    },
    "devDependencies": {
        "@types/nock": "^11.1.0",
        "@types/node": "^12.12.11",
        "@types/node-fetch": "^2.5.4",
        "@types/tape": "^4.2.33",
        "intercept-stdout": "^0.1.2",
        "nock": "^11.7.0",
        "prettier": "^1.19.1",
        "tape": "^4.11.0",
        "to-readable-stream": "^2.1.0",
        "ts-node": "^8.5.2",
        "typescript": "^3.7.2"
    }
}
